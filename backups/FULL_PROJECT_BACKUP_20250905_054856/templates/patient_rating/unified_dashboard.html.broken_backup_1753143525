<script>
console.log('Minimal JS loaded');

function updateSliderValue(sliderId, value) {
    const element = document.getElementById(sliderId + '_value');
    if (element) element.textContent = value;
}

function handleFormSubmit(event) {
    event.preventDefault();
    location.reload();
}

function deleteAgeBracket(bracketId) {
    if (confirm('Delete age bracket?')) {
        fetch('/patients/dashboard/', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'X-CSRFToken': document.querySelector('[name=csrfmiddlewaretoken]').value,
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: 'action=delete_age_bracket&bracket_id=' + bracketId
        })
        .then(response => response.json())
        .then(data => data.success ? location.reload() : alert('Error'))
        .catch(() => alert('Error'));
    }
}

function addNewAgeBracket() {
    alert('Age bracket add function loaded');
}

function saveNewAgeBracket() {
    alert('Save function loaded');
}

function cancelNewAgeBracket() {
    alert('Cancel function loaded');
}

function deleteSpendBracket(bracketId) {
    if (confirm('Delete spend bracket?')) {
        fetch('/patients/dashboard/', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'X-CSRFToken': document.querySelector('[name=csrfmiddlewaretoken]').value,
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: 'action=delete_spend_bracket&bracket_id=' + bracketId
        })
        .then(response => response.json())
        .then(data => data.success ? location.reload() : alert('Error'))
        .catch(() => alert('Error'));
    }
}

function addNewSpendBracket() {
    alert('Spend bracket add function loaded');
}

function saveNewSpendBracket() {
    alert('Save spend function loaded');
}

function cancelNewSpendBracket() {
    alert('Cancel spend function loaded');
}

function editConsecutivePoints() {
    alert('Edit consecutive function loaded');
}

function saveConsecutivePoints() {
    alert('Save consecutive function loaded');
}

function editCancellationsPoints() {
    alert('Edit cancellations function loaded');
}

function saveCancellationsPoints() {
    alert('Save cancellations function loaded');
}

