<script>
// Form submission handler for Update Weights button
function handleFormSubmit(event) {
    event.preventDefault();
    console.log('üîß handleFormSubmit called - submitting via AJAX...');
    
    const form = event.target;
    const formData = new FormData(form);
    
    // Log what we're sending
    for (let [key, value] of formData.entries()) {
        if (key.includes('weight')) {
            console.log('Sending: ' + key + ' = ' + value);
        }
    }
    
    fetch('/patients/dashboard/', {
        method: 'POST',
        body: formData,
        headers: {
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            console.log('‚úÖ Update Weights successful: ' + data.message);
        } else {
            console.error('üö® Update failed:', data);
        }
    })
    .catch(error => {
        console.error('üö® AJAX Error:', error);
    });
    
    return false;
}


// AJAX form submission for Update Weights button

    
    fetch('/patients/dashboard/', {
        method: 'POST',
        body: formData,
        headers: {
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            console.log('‚úÖ Update Weights successful: ' + data.message);
            
            // Show success message
            const messageDiv = document.getElementById('message');
            if (messageDiv) {
                messageDiv.innerHTML = '<div style="color: green; font-weight: bold; margin: 10px 0;">‚úÖ ' + data.message + '</div>';
                setTimeout(() => {
                    messageDiv.innerHTML = '';
                }, 3000);
            }
        } else {
            console.error('üö® Update Weights failed:', data);
            alert('Error updating weights: ' + (data.message || 'Unknown error'));
        }
    })
    .catch(error => {
        console.error('üö® AJAX Error:', error);
        alert('Network error updating weights');
    });
    
    return false; // Prevent form submission
}


// Update hidden inputs when sliders move
function updateHiddenInput(sliderId, hiddenId) {
    const slider = document.getElementById(sliderId);
    const hidden = document.getElementById(hiddenId);
    if (slider && hidden) {
        hidden.value = slider.value;
        console.log('Updated ' + hiddenId + ' = ' + slider.value);
    }
}

